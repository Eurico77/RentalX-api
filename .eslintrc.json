{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"rules": {
		"camelcase": "off",
		"@types-eslint/naming-convertion": [
			"error",
			{
				"selector": "interface",
				"format": [
					"PascalCase"
				],
				"custom": {
					"regex": [
						"ÃŽ[A-Z]"
					],
					"match": true
				}
			}
		],
		"class-methods-use-this": "off",
		"import/prefer-default-export": "off",
		"no-shadow": "off",
		"no-useless-constructor": "off",
		"no-empty-function": "off",
		"prettier/prettier": "error",
		"no-use-before-define": "off",
		"import-helpers/order-imports": [
			"warn",
			{
				"newlinesBetween": "always",
				"groups": [
					"module",
					"/^@shared/",
					[
						"parent ",
						"sibling",
						"index"
					]
				],
				"alphabetize": {
					"order": "asc",
					"ignoreCase": true
				}
			}
		],
		"@typescript-eslint/no-use-before-define": [
			"error"
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}